<div class="container pt-3">

  <div class="d-flex justify-content-between">
    <div>
      <h1 class="pt-2"><%= @cocktail.name %></h1>
      <% doses = Dose.all.select { |dose| dose.cocktail_id == @cocktail.id } %>
      <% doses.each do |dose| %>
        <p><%= dose.ingredient.name %>: <%= dose.description %></p>
      <% end %>

    </div>
    <div><%= link_to "Back to all cocktails", cocktails_path, class: "btn btn-primary mt-3" %></div>
  </div>

  <%= link_to "Add Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
  <%= link_to 'Delete cocktail', @cocktail, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
